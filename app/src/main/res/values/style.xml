<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="android:layout_width">2500dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">250sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">300sp</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F4BB44</item>
    </style>
    <style name="RadioGroupStyle">
        <item name="android:layout_width">2000sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="RadioButtonStyle">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>
